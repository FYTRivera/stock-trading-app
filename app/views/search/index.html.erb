<%= link_to "Back to home", root_path %> 
<h1><%= pluralize(@stocks.count, "Result")%></h1>
<%= search_form_for(@query, url: search_path, method: :get) do |f| %>
    <%= f.search_field :code_or_name_i_cont_any, placeholder: "Search..." %>
    <%= f.submit "Search!" %>
<% end %>

<div>
    <table>
        <thead>
            <tr>
                <th><%= sort_link(@query, :code, "Code", default_order: :asc)%></th>
                <th><%= sort_link(@query, :name, "Name")%></th>
            </tr>
        </thead>
        <tbody>
            <% @stocks.each do |stock|%>
            <tr>
                <td><%= link_to stock.code, stock%></td>
                <td><%= link_to stock.name, stock%></td>
            </tr>
            <%end%>
        </tbody>
    </table>
</div>

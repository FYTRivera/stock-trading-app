<div class="login-wrapper">
  <div class="login-container">
    <%= link_to image_tag("/logo3.png"), root_path %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <h1 class="form-h1">Welcome Back!</h1>

    <% if alert || notice %>
      <p class="alert danger"><%= alert %></p>
    <% else %>
      <p class="form-p">Please enter your details.</p>
    <% end %>

    <div class="field">
      <%= f.label :email, class:"form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-input", placeholder: "Enter your email" %>
    </div>

    <div class="field">
      <%= f.label :password, class:"form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class:"form-input", placeholder: "••••••" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field-checkbox">
        <div>
          <%= f.check_box :remember_me, class: "check-submit" %>
          <%= f.label :remember_me, class: "check-label" %>
        </div>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forgot-submit" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Sign in", data: {turbo: false}, class: "login-submit" %>
    </div>

    <% end %>
    <p>Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), class:"signup-login"%></p>
  </div>
</div>

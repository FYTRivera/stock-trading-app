<%= form_with(model: transaction) do |form| %>
  <% if transaction.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
        <% transaction.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price %>
  </div>

  <div>
    <%= form.label :volume, style: "display: block" %>
    <%= form.number_field :volume %>
  </div>

  <div>
    <%= form.label :trader_id, style: "display: block" %>
    <%= form.number_field :trader_id, value: current_trader.id %>
  </div>

  <div>
    <%= form.label :stock_id, style: "display: block" %>
    <%= form.number_field :stock_id %>
  </div>

  <div>
    <%= form.label :transaction_type, style: "display: block" %>
    <%= form.number_field :transaction_type %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<% if current_trader %>
    <p> Hello <%= current_trader.first_name%> <%= current_trader.last_name%>!</p>
    <p>You are logged in.</p>
    <% if !current_trader.admin %>
        <p>You are a trader.</p>
    <% end %>

<%= link_to "Edit Profile", edit_trader_registration_path %> | 
<%= link_to "Sign Out", destroy_trader_session_path, 'data-turbo-method': :delete %>

<% if current_trader.admin %>
    <p><strong>You are an admin.</strong></p>
    <p>There are <%= Trader.count %> in the system.</p>
    <p><%= link_to "All Users", traders_path %></p>
<%end%>

<%= search_form_for(@query, url: search_path, method: :get) do |f| %>
    <%= f.search_field :code_or_name_i_cont_any, placeholder: "Search..." %>
    <%= f.submit "Search!" %>
<% end %>
<br />
<ul>
  <% @top_ten.each do |company| %>
    <li>
      <p>Company Code: <strong><%= company.symbol %></strong><p>
      <p>Company Name: <strong><%= company.company_name %></strong><p>
      <p>Latest Price: <strong><%= company.latest_price%></strong><p>
      <p>Latest Time: <strong><%= company.latest_time%></strong><p>
      <p>Change: <strong><%= company.change%></strong><p>
      <br />
    </li>
  <%end%>
</ul>

<%= link_to "See all stocks", stocks_path %>
<%= link_to "Search", search_path%>

<% else %>
    <%= render 'nav' %>
    <div>
        <img src="/image.png" class="image">
    </div>
<% end %>